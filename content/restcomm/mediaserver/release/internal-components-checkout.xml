									</scmVersionType>
									<skipCheckoutIfExists>
										true
									</skipCheckoutIfExists>
									<checkoutDirectory>
										${checkout.basedir}/test-suite
									</checkoutDirectory>
									<connectionUrl>
										${media.controllers.connectionURL}
									</connectionUrl>
									<username>
										${checkout.username}
									</username>
									<password>
										${checkout.password}
									</password>
								</configuration>
							</execution>
							<!--execution>
								<id>media-examples-update</id>
